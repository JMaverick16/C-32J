        <property>/gear/gear[0]/position-norm</property>
        <volume>
            <factor>1.25</factor>
        </volume>
        <pitch>
            <internal>dt_play</internal>
            <offset>1.0</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-2</z>
